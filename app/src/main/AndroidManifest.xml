<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.translateapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TranslateApplication">
        <activity
            android:name=".ui.learingLang.LearingMainActivity"
            android:label="@string/title_activity_learing_main"
            android:theme="@style/Theme.TranslateApplication.NoActionBar"></activity>
        <activity android:name=".ui.translation.languages.SelectLanguageTo" />
        <activity android:name=".ui.translation.languagesfrom.SelectLanguageFrom" />
        <activity android:name=".ui.learingLang.languages.nativeLanguage.ChooseNativeLanguage" />
        <activity android:name=".ui.learingLang.languages.learnLangChoose.ChooseLearnLanguage" />
        <activity android:name=".ui.learingLang.BaseLearingActivity" />
        <activity android:name=".ui.translation.TraslationActivity" />
        <activity android:name=".ui.FeatureSelectionActivity" />
        <activity android:name=".ui.splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>